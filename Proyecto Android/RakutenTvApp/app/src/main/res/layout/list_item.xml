<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutPadre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_btn_menu"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/caratula"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:maxWidth="100dp"
        android:minWidth="100dp"
        android:padding="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:textColor="@color/blanco"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/anio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:textColor="@color/blanco"
            android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|right">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/mediaPuntuaciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageEstrellas"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:maxWidth="100dp"
                android:minWidth="100dp"
                android:src="@drawable/estrella"
                android:visibility="visible"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/vecesPuntuado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imagenVotados"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:maxWidth="100dp"
                android:minWidth="100dp"
                android:src="@drawable/usuario" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/precio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imagenPrecio"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:maxWidth="100dp"
                android:minWidth="100dp"
                android:src="@drawable/ticket" />

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>


</LinearLayout>