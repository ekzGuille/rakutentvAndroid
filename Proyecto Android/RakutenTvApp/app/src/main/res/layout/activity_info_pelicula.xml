<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisOscuro"
    android:orientation="vertical"
    tools:context=".InfoPeliculaActivity">

    <LinearLayout
        android:id="@+id/imagenFondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/caratula"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            android:maxWidth="150dp"
            android:minWidth="150dp"
            android:padding="1dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tituloPeli"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|center"
                    android:shadowColor="@color/negro"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"

                    android:shadowRadius="1.6"
                    android:text="TITULO"
                    android:textColor="@color/blanco"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/anioEstreno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center"
                    android:shadowColor="@color/negro"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"

                    android:shadowRadius="1.6"
                    android:text="anio"
                    android:textColor="@color/blanco"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="-20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mediaPuntuaciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/blanco"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:maxWidth="100dp"
                android:minWidth="100dp"
                android:src="@drawable/estrella" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/vecesPuntuado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5.5"
                android:textColor="@color/blanco"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:maxWidth="100dp"
                android:minWidth="100dp"
                android:src="@drawable/usuario" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resumenPeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Un estafador veterano apoya a una joven y atractiva mujer, pero las cosas se complican cuando ellos se involucran romÃ¡nticamente."
            android:textColor="@color/blanco"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>