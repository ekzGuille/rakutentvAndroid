<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoPeliculaActivity"
    android:orientation="vertical"
    android:background="@color/grisOscuro">

    <LinearLayout
        android:id="@+id/imagenFondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_blanco"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/caratula"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:maxWidth="120dp"
        android:minWidth="120dp"
        android:padding="1dp"
        android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tituloPeli"
            android:text="Titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:textColor="@color/blanco"
            android:textSize="25dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resumenPeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"
            android:textSize="20dp"
            android:text="Un estafador veterano apoya a una joven y atractiva mujer, pero las cosas se complican cuando ellos se involucran romÃ¡nticamente."/>

    </LinearLayout>

</LinearLayout>